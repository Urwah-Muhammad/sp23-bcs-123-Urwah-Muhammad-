<div class="wrap mt-5 mb-5">
  <div class="card mb-5">
    <div class="card-body">
      <h3>Our Products</h3>
      <p class="text-muted small mb-0">Showing products from our database.</p>

      <form method="GET" action="/products" class="row g-3 mt-2">
        <div class="col-md-9">
          <input type="text" name="q" class="form-control" placeholder="Search by name, department, or color..." value="<%= typeof q !== 'undefined' ? q : '' %>">
        </div>
        <div class="col-md-3 d-grid gap-2">
          <button type="submit" class="btn btn-danger">Search</button>
          <a href="/products" class="btn btn-secondary">Reset</a>
        </div>
      </form>
    </div>
  </div>

  <div class="row" id="product-list">
    <% if (typeof products !== 'undefined' && products.length > 0) { %>
      <% products.forEach(product => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <% if (product.image) { %>
              <img src="/images/uploaded/<%= product.image %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
            <% } else { %>
              <img src="https://placehold.co/300x200/e9ecef/495057?text=No+Image" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
            <% } %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text text-muted small">
                <strong>Department:</strong> <%= product.department %><br>
                <strong>Color:</strong> <%= product.color %><br>
                <% if (product.description) { %>
                  <%= product.description.substring(0, 100) %><% if (product.description.length > 100) { %>...<% } %>
                <% } %>
              </p>
              <div class="mt-auto">
                <p class="card-text">
                  <strong class="text-danger fs-4">$<%= product.price %></strong>
                </p>
                <form method="POST" action="/cart/add" class="d-inline">
                  <input type="hidden" name="productId" value="<%= product._id %>">
                  <button type="submit" class="btn btn-primary w-100">Add to Cart</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12">
        <div class="alert alert-info mb-0">
          <% if (typeof q !== 'undefined' && q) { %>
            No products found matching "<%= q %>". Try a different search term.
          <% } else { %>
            No products available. Admin can add products from the admin panel.
          <% } %>
        </div>
      </div>
    <% } %>
  </div>
</div>
