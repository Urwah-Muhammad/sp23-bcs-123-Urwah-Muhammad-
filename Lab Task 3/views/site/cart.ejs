<a href="/" class="btn btn-info">Continue Shopping</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Product Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        <% if (typeof products !== 'undefined' && products.length > 0) { %>
            <% for(var i=0; i<products.length; i++) { let product = products[i]; %>
                <tr>
                    <td><%= product.name %></td>
                    <td>$<%= product.price %></td>
                    <td><%= product.quantity || 1 %></td>
                    <td>$<%= (Number(product.price) * (product.quantity || 1)).toFixed(2) %></td>
                </tr>
            <% } %>
        <% } else { %>
            <tr>
                <td colspan="4" class="text-center">Your cart is empty</td>
            </tr>
        <% } %>
        <tfoot>
            <tr>
                <td colspan="3"><strong>Total:</strong></td>
                <td><strong>$<%= typeof total !== 'undefined' ? total.toFixed(2) : '0.00' %></strong></td>
            </tr>
        </tfoot>
    </tbody>
</table>




